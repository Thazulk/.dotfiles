#!/usr/bin/env zsh

if [[ $# -eq 1 ]]; then
    selected=$1
else
    directories=(~/ ~/projects/ ~/projects/github.com/ ~/work/ ~/work/digitlean/ ~/learn/ ~/personal/ ~/workspace/*)
    existing_dirs=()
    selected=""
    for dir in "${directories[@]}"; do
        if [ -d "$dir" ]; then
            if [ "$dir" = "~/projects/github.com/Thazulk" ]; then
                selected+=$(find "$dir" -mindepth 1 -maxdepth 2 -type d | fzf)
            else
                existing_dirs+=("$dir")
            fi
        fi
    done
    if [ -z "$selected" ]; then
        selected+=$(find $existing_dirs -mindepth 1 -maxdepth 1 -type d | fzf)
    fi
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

# tmux switch-client -t $selected_name
# attach to existing tmux session
if [[ -n $TMUX ]]; then
    tmux switch-client -t $selected_name
    exit 0
fi
