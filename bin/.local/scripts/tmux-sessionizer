#!/usr/bin/env zsh

setopt EXTENDED_GLOB
setopt NULL_GLOB

if [[ $# -eq 1 ]]; then
    selected=$1
else
    config_file="$HOME/.dotfiles/bin/.local/scripts/sessionizer-paths.conf"
    if [[ ! -f "$config_file" ]]; then
        echo "Config file not found at $config_file"
        exit 1
    fi

    base_dirs=()
    while IFS= read -r dir || [[ -n "$dir" ]]; do
        [[ -z "$dir" || "$dir" =~ ^[[:space:]]*# ]] && continue
        
        expanded_dir=${dir/#\~/$HOME}
        base_dirs+=("$expanded_dir")
    done < "$config_file"

    all_dirs=()
    for dir in "${base_dirs[@]}"; do
        [[ -d "$dir" ]] && all_dirs+=("$dir")
        
        for subdir in "$dir"/*(ND/); do
            [[ -d "$subdir" ]] && all_dirs+=("$subdir")
        done
    done

    selected=$(printf '%s\n' "${all_dirs[@]}" | sort -u | fzf)
fi

unsetopt EXTENDED_GL

[[ -z "$selected" ]] && exit 0

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

if [[ -n $TMUX ]]; then
    tmux switch-client -t $selected_name
else
    tmux attach-session -t $selected_name
fi

