#!/usr/bin/env zsh

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find  ~/ ~/projects ~/projects/github.com/Thazulk ~/work/ ~/work/digitlean/ ~/learn/ ~/personal/ -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

if [[ -d $selected ]]; then
    code $selected
    exit 0
fi